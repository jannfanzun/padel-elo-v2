<!-- views/user/rankings.ejs - Komplette Aktualisierung -->
<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Spieler Rankings</h2>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-12">
    <!-- Ranking Type Tabs -->
    <ul class="nav nav-tabs d-flex flex-column flex-md-row">
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'elo' ? 'active' : '' %>" href="?type=elo">
          <i class="fas fa-trophy me-2"></i>ELO Rangliste
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-improvement' ? 'active' : '' %>" href="?type=quarterly-improvement">
          <i class="fas fa-chart-line me-2"></i>Quartal: ELO-Verbesserung
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-games' ? 'active' : '' %>" href="?type=quarterly-games">
          <i class="fas fa-gamepad me-2"></i>Quartal: Spieleanzahl
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'alltime-games' ? 'active' : '' %>" href="?type=alltime-games">
          <i class="fas fa-tshirt me-2"></i>All Time padELO Spiele
        </a>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <% if (rankingType === 'elo') { %>
            <h3 class="h5 mb-0">Aktuelle Rangliste</h3>
          <% } else if (rankingType === 'quarterly-improvement') { %>
            <h3 class="h5 mb-0">ELO-Verbesserung (<%= quarterName %>)</h3>
          <% } else if (rankingType === 'quarterly-games') { %>
            <h3 class="h5 mb-0">Anzahl Spiele (<%= quarterName %>)</h3>
          <% } else if (rankingType === 'alltime-games') { %>
            <h3 class="h5 mb-0">All Time padELO Spiele - Shirt Ranking</h3>
          <% } %>
          <small class="text-muted"><%= rankings.length %> Spieler</small>
        </div>
      </div>
      <div class="card-body p-0">
        <% if (rankings.length === 0) { %>
          <div class="p-4 text-center">
            <p class="mb-0">Noch keine Spieler verf√ºgbar.</p>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Spieler</th>
                  <% if (rankingType === 'elo') { %>
                    <th>ELO Punkte</th>
                  <% } else if (rankingType === 'quarterly-improvement') { %>
                    <th>ELO Verbesserung</th>
                    <th>Start ELO</th>
                    <th>Aktuell ELO</th>
                  <% } else if (rankingType === 'quarterly-games') { %>
                    <th>Anzahl Spiele</th>
                    <th>ELO Punkte</th>
                  <% } else if (rankingType === 'alltime-games') { %>
                    <th>Gesamt Spiele</th>
                    <th>Shirt Level</th>
                    <th>ELO Punkte</th>
                  <% } %>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% rankings.forEach(ranking => { %>
                  <tr class="<%= ranking.user._id.toString() === user._id.toString() ? 'table-primary' : '' %>">
                    <td><%= ranking.rank %></td>
                    <td><strong><%= ranking.user.username %></strong></td>
                    
                    <% if (rankingType === 'elo') { %>
                      <td><%= ranking.user.eloRating %></td>
                    <% } else if (rankingType === 'quarterly-improvement') { %>
                      <td>
                        <span class="<%= ranking.quarterlyEloChange > 0 ? 'text-success' : (ranking.quarterlyEloChange < 0 ? 'text-danger' : 'text-muted') %>">
                          <%= ranking.quarterlyEloChange > 0 ? '+' : '' %><%= ranking.quarterlyEloChange %>
                        </span>
                      </td>
                      <td><%= ranking.initialQuarterElo %></td>
                      <td><%= ranking.user.eloRating %></td>
                    <% } else if (rankingType === 'quarterly-games') { %>
                      <td><%= ranking.quarterlyGames %></td>
                      <td><%= ranking.user.eloRating %></td>
                    <% } else if (rankingType === 'alltime-games') { %>
                      <td><strong><%= ranking.alltimeGames %></strong></td>
                      <td>
                        <span class="badge" style="background-color: <%= 
                          ranking.shirtColor === 'white' ? '#f8f9fa; color: #212529; border: 1px solid #dee2e6' :
                          ranking.shirtColor === 'yellow' ? '#ffc107; color: #212529' :
                          ranking.shirtColor === 'orange' ? '#fd7e14; color: white' :
                          ranking.shirtColor === 'green' ? '#198754; color: white' :
                          ranking.shirtColor === 'blue' ? '#0d6efd; color: white' :
                          ranking.shirtColor === 'purple' ? '#6f42c1; color: white' :
                          '#212529; color: white'
                        %>">
                          <i class="fas fa-tshirt me-1"></i><%= ranking.shirtLevel %>
                        </span>
                      </td>
                      <td><%= ranking.user.eloRating %></td>
                    <% } %>
                    
                    <td>
                      <% if (ranking.isInactive) { %>
                        <span class="badge bg-warning text-dark">Inaktiv</span>
                      <% } else { %>
                        <span class="badge bg-success">Aktiv</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
      <div class="card-footer bg-white">
        <% if (rankingType === 'alltime-games') { %>
          <div class="row">
            <div class="col-12">
              <small class="text-muted d-block mb-2">
                <span class="badge bg-warning text-dark me-1">Inaktiv</span> Keine Spiele in den letzten 7 Tagen
              </small>
              <small class="text-muted">
                <strong>Shirt Levels:</strong>
                <span class="badge ms-1" style="background-color: #f8f9fa; color: #212529; border: 1px solid #dee2e6">Rookie (0-29)</span>
                <span class="badge bg-light text-dark ms-1">Beginner (30-89)</span>
                <span class="badge ms-1" style="background-color: #ffc107; color: #212529">Intermediate (90-149)</span>
                <span class="badge ms-1" style="background-color: #fd7e14; color: white">Experienced (150-299)</span>
                <span class="badge ms-1" style="background-color: #198754; color: white">Advanced (300-499)</span>
                <span class="badge ms-1" style="background-color: #0d6efd; color: white">Expert (500-749)</span>
                <span class="badge ms-1" style="background-color: #6f42c1; color: white">Master (750-999)</span>
                <span class="badge bg-dark ms-1">Legend (1000+)</span>
              </small>
            </div>
          </div>
        <% } else { %>
          <div class="d-flex justify-content-between">
            <small class="text-muted">
              <span class="badge bg-warning text-dark me-1">Inaktiv</span> Keine Spiele in den letzten 7 Tagen
            </small>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>