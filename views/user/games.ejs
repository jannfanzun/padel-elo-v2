<%- include('../partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Meine Spiele</h2>
        <a href="/game/add" class="btn btn-primary">
          <i class="fas fa-plus-circle me-2"></i>Spiel hinzufügen
        </a>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="h5 mb-0">Spielhistorie</h3>
            <small class="text-muted"><%= total || 0 %> Spiele insgesamt</small>
          </div>
        </div>
        <div class="card-body p-0">
          <% if (games.length === 0) { %>
            <div class="p-4 text-center">
              <p class="mb-0">Du hast noch keine Spiele gespielt.</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Datum</th>
                    <th>Teams</th>
                    <th>Ergebnis</th>
                    <th>Ergebnis</th>
                    <th>ELO-Änderung</th>
                    <th>Aktionen</th>
                  </tr>
                </thead>
                <tbody>
                  <% games.forEach(game => { %>
                    <% 
                      // Finde heraus, ob der Benutzer in Team 1 oder Team 2 war
                      let userTeam = null;
                      let userEloChange = 0;
                      
                      game.team1.forEach(player => {
                        if (player.player._id.toString() === user._id.toString()) {
                          userTeam = 'team1';
                          userEloChange = player.eloChange;
                        }
                      });
                      
                      if (!userTeam) {
                        game.team2.forEach(player => {
                          if (player.player._id.toString() === user._id.toString()) {
                            userTeam = 'team2';
                            userEloChange = player.eloChange;
                          }
                        });
                      }
                      
                      const isWinner = userTeam === game.winner;
                    %>
                    <tr>
                      <td><%= new Date(game.createdAt).toLocaleDateString('de-DE', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>
                      <td>
                        <div class="small">
                          <strong class="<%= userTeam === 'team1' ? 'text-primary' : '' %>">
                            <%= game.team1[0].player.username %> & <%= game.team1[1].player.username %>
                          </strong>
                          <span class="text-muted">vs</span>
                          <strong class="<%= userTeam === 'team2' ? 'text-primary' : '' %>">
                            <%= game.team2[0].player.username %> & <%= game.team2[1].player.username %>
                          </strong>
                        </div>
                      </td>
                      <td>
                        <span class="<%= game.winner === 'team1' ? 'text-success' : 'text-danger' %>"><%= game.score.team1 %></span>
                        -
                        <span class="<%= game.winner === 'team2' ? 'text-success' : 'text-danger' %>"><%= game.score.team2 %></span>
                      </td>
                      <td>
                        <span class="badge <%= isWinner ? 'bg-success' : 'bg-danger' %>">
                          <%= isWinner ? 'Gewonnen' : 'Verloren' %>
                        </span>
                      </td>
                      <td>
                        <span class="<%= userEloChange >= 0 ? 'text-success' : 'text-danger' %>">
                          <%= userEloChange >= 0 ? '+' : '' %><%= userEloChange %>
                        </span>
                      </td>
                      <td>
                        <a href="/game/<%= game._id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
        <% if (typeof totalPages !== 'undefined' && totalPages > 0) { %>
        <div class="card-footer bg-white">
          <nav aria-label="Spiele Paginierung">
            <ul class="pagination justify-content-center mb-0">
              <% if (hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/game/user/history?page=<%= currentPage - 1 %>">
                    <i class="fas fa-chevron-left"></i> Zurück
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link"><i class="fas fa-chevron-left"></i> Zurück</span>
                </li>
              <% } %>
              
              <% 
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4 && totalPages > 4) {
                  startPage = Math.max(1, endPage - 4);
                }
              %>
              
              <% if (startPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/game/user/history?page=1">1</a>
                </li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
              <% } %>
              
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="/game/user/history?page=<%= i %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              
              <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
                <li class="page-item">
                  <a class="page-link" href="/game/user/history?page=<%= totalPages %>">
                    <%= totalPages %>
                  </a>
                </li>
              <% } %>
              
              <% if (hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/game/user/history?page=<%= currentPage + 1 %>">
                    Weiter <i class="fas fa-chevron-right"></i>
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Weiter <i class="fas fa-chevron-right"></i></span>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <% } %>
      </div>
    </div>
  </div>  

<%- include('../partials/footer') %>