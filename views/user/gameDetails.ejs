<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">Spieldetails</h2>
            <span class="badge bg-light text-primary">
              <%= new Date(game.createdAt).toLocaleDateString('de-DE', { day: 'numeric', month: 'short', year: 'numeric' }) %>
            </span>
          </div>
          <div class="card-body">
            <% if (typeof success !== 'undefined' && success) { %>
              <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

            <% if (typeof success !== 'undefined' && success && success.includes('benachrichtigt')) { %>
              <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-envelope me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>
          <div class="row mb-4">
            <div class="col-md-6 text-center <%= game.winner === 'team1' ? 'text-success' : 'text-muted' %>">
              <h3 class="h5 mb-3">
                Team 1
                <% if (game.winner === 'team1') { %>
                  <span class="badge bg-success ms-2">Gewinner</span>
                <% } %>
              </h3>
              
              <div class="row g-3">
                <div class="col-6">
                  <div class="card h-100 <%= game.winner === 'team1' ? 'border-success' : '' %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= game.team1[0].player.username %></h5>
                      <div class="d-flex justify-content-around">
                        <div>
                          <small class="text-muted">Vorher</small>
                          <p class="mb-0"><%= game.team1[0].eloBeforeGame %></p>
                        </div>
                        <div>
                          <small class="text-muted">Nachher</small>
                          <p class="mb-0"><%= game.team1[0].eloAfterGame %></p>
                        </div>
                      </div>
                      <span class="badge <%= game.team1[0].eloChange >= 0 ? 'bg-success' : 'bg-danger' %> mt-2">
                        <%= game.team1[0].eloChange >= 0 ? '+' : '' %><%= game.team1[0].eloChange %>
                      </span>
                    </div>
                  </div>
                </div>
                
                <div class="col-6">
                  <div class="card h-100 <%= game.winner === 'team1' ? 'border-success' : '' %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= game.team1[1].player.username %></h5>
                      <div class="d-flex justify-content-around">
                        <div>
                          <small class="text-muted">Vorher</small>
                          <p class="mb-0"><%= game.team1[1].eloBeforeGame %></p>
                        </div>
                        <div>
                          <small class="text-muted">Nachher</small>
                          <p class="mb-0"><%= game.team1[1].eloAfterGame %></p>
                        </div>
                      </div>
                      <span class="badge <%= game.team1[1].eloChange >= 0 ? 'bg-success' : 'bg-danger' %> mt-2">
                        <%= game.team1[1].eloChange >= 0 ? '+' : '' %><%= game.team1[1].eloChange %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="mt-3">
                <span class="h4">Team Elo: <%= game.teamElo.team1 %></span>
              </div>
            </div>
            
            <div class="col-md-6 text-center <%= game.winner === 'team2' ? 'text-success' : 'text-muted' %>">
              <h3 class="h5 mb-3">
                Team 2
                <% if (game.winner === 'team2') { %>
                  <span class="badge bg-success ms-2">Gewinner</span>
                <% } %>
              </h3>
              
              <div class="row g-3">
                <div class="col-6">
                  <div class="card h-100 <%= game.winner === 'team2' ? 'border-success' : '' %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= game.team2[0].player.username %></h5>
                      <div class="d-flex justify-content-around">
                        <div>
                          <small class="text-muted">Vorher</small>
                          <p class="mb-0"><%= game.team2[0].eloBeforeGame %></p>
                        </div>
                        <div>
                          <small class="text-muted">Nachher</small>
                          <p class="mb-0"><%= game.team2[0].eloAfterGame %></p>
                        </div>
                      </div>
                      <span class="badge <%= game.team2[0].eloChange >= 0 ? 'bg-success' : 'bg-danger' %> mt-2">
                        <%= game.team2[0].eloChange >= 0 ? '+' : '' %><%= game.team2[0].eloChange %>
                      </span>
                    </div>
                  </div>
                </div>
                
                <div class="col-6">
                  <div class="card h-100 <%= game.winner === 'team2' ? 'border-success' : '' %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= game.team2[1].player.username %></h5>
                      <div class="d-flex justify-content-around">
                        <div>
                          <small class="text-muted">Vorher</small>
                          <p class="mb-0"><%= game.team2[1].eloBeforeGame %></p>
                        </div>
                        <div>
                          <small class="text-muted">Nachher</small>
                          <p class="mb-0"><%= game.team2[1].eloAfterGame %></p>
                        </div>
                      </div>
                      <span class="badge <%= game.team2[1].eloChange >= 0 ? 'bg-success' : 'bg-danger' %> mt-2">
                        <%= game.team2[1].eloChange >= 0 ? '+' : '' %><%= game.team2[1].eloChange %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="mt-3">
                <span class="h4">Team Elo: <%= game.teamElo.team2 %></span>
              </div>
            </div>
          </div>
          
          <div class="text-center mb-4">
            <div class="display-4 fw-bold">
              <span class="<%= game.winner === 'team1' ? 'text-success' : 'text-muted' %>"><%= game.score.team1 %></span>
              <span class="text-muted">-</span>
              <span class="<%= game.winner === 'team2' ? 'text-success' : 'text-muted' %>"><%= game.score.team2 %></span>
            </div>
          </div>
          
          <div class="text-center text-muted">
            <small>
              Spiel hinzugefügt von <strong><%= game.createdBy.username %></strong> am 
              <%= new Date(game.createdAt).toLocaleDateString('de-DE', { 
                day: 'numeric', 
                month: 'short', 
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }) %>
            </small>
          </div>
        </div>
        <div class="card-footer bg-white">
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
              <div class="d-flex flex-column flex-md-row">
                  <% if (user.isAdmin) { %>
                    <!-- Only show delete button for admin users -->
                    <form action="/admin/games/<%= game._id %>/delete" method="POST" class="me-md-2 mb-2 mb-md-0">
                      <button type="submit" class="btn btn-danger w-100 w-md-auto mb-2 mb-md-0 me-md-2 text-nowrap text-start" onclick="return confirm('Bist du sicher, dass du dieses Spiel löschen möchtest? Alle ELO-Änderungen werden rückgängig gemacht.')">
                        <i class="fas fa-trash me-2"></i>Spiel löschen
                      </button>
                    </form>
                  <% } else { %>
                    <!-- Only show report button for regular users -->
                    <button class="btn btn-danger w-100 w-md-auto mb-2 mb-md-0 me-md-2 text-nowrap text-start" data-bs-toggle="modal" data-bs-target="#reportGameModal">
                      <i class="fas fa-flag me-2"></i>Problem melden
                    </button>
                  <% } %>
      
                  <a href="/game/add" class="btn btn-primary w-100 w-md-auto text-nowrap text-start">
                      <i class="fas fa-plus-circle me-2"></i>Neues Spiel
                  </a>
              </div>
          </div>
      </div>      
      </div>
    </div>
  </div>  

  <% if (!user.isAdmin) { %>
  <div class="modal fade" id="reportGameModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/game/<%= game._id %>/report" method="POST">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title">Problem mit diesem Spiel melden</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="reportReason" class="form-label">Was ist das Problem mit diesem Spiel?</label>
              <select class="form-select" id="reportReason" name="reason" required>
                <option value="" selected disabled>Bitte auswählen...</option>
                <option value="wrong_score">Falsches Ergebnis eingetragen</option>
                <option value="wrong_players">Falsche Spieler eingetragen</option>
                <option value="duplicate">Doppelter Eintrag</option>
                <option value="other">Anderes Problem</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="reportDetails" class="form-label">Zusätzliche Details</label>
              <textarea class="form-control" id="reportDetails" name="details" rows="3" placeholder="Bitte beschreibe das Problem genauer..."></textarea>
            </div>
            
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              Diese Meldung wird an den Administrator gesendet, der das Spiel überprüfen und gegebenenfalls löschen wird.
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-paper-plane me-2"></i>Meldung senden
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% } %>

<%- include('../partials/footer') %>