<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Mein Profil</h2>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
        <i class="fas fa-edit me-2"></i>Profil bearbeiten
      </button>
    </div>
  </div>
</div>

<!-- Alert Messages -->
<% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-2"></i><%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle me-2"></i><%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<div class="row">
  <div class="col-md-4">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-white">
        <h2 class="h5 mb-0">Profilinformationen</h2>
      </div>
      <div class="card-body text-center">
        <div class="mb-3 position-relative">
          <!-- Profile Image -->
          <div class="profile-image-container position-relative d-inline-block">
            <% if (user.profileImage) { %>
              <img src="<%= user.profileImage %>" alt="<%= user.username %>" 
                   class="rounded-circle mb-3" 
                   style="width: 120px; height: 120px; object-fit: cover;">
            <% } else { %>
              <i class="fas fa-user-circle fa-5x text-primary mb-3"></i>
            <% } %>
            
            <!-- Image Upload Button -->
            <button type="button" 
                    class="btn btn-sm btn-secondary position-absolute rounded-circle"
                    style="bottom: 10px; right: 5px; width: 35px; height: 35px;"
                    data-bs-toggle="modal" 
                    data-bs-target="#uploadImageModal">
              <i class="fas fa-camera"></i>
            </button>
          </div>
          
          <h3 class="h4"><%= user.username %></h3>
          <p class="text-muted mb-2"><%= user.email %></p>
          <div class="mb-3">
            <span class="badge bg-primary fs-6">Rang #<%= rank %></span>
          </div>
        </div>
        
        <div class="mb-3">
          <h4 class="h5 mb-2">ELO Rating</h4>
          <span class="display-6 fw-bold text-primary"><%= user.eloRating %></span>
        </div>
        
        <!-- Shirt Status Sektion -->
        <div class="mb-3">
          <h4 class="h5 mb-2">Shirt Level</h4>
          <div class="mb-2">
            <span class="badge fs-6" style="background-color: <%= 
              stats.shirtColor === 'white' ? '#bebebe; color: #212529; border: 1px solid #dee2e6' :
              stats.shirtColor === 'yellow' ? '#ffc107; color: #212529' :
              stats.shirtColor === 'orange' ? '#fd7e14; color: white' :
              stats.shirtColor === 'green' ? '#198754; color: white' :
              stats.shirtColor === 'blue' ? '#0d6efd; color: white' :
              stats.shirtColor === 'purple' ? '#6f42c1; color: white' :
              '#212529; color: white'
            %>">
              <i class="fas fa-tshirt me-1"></i><%= stats.shirtLevel %>
            </span>
          </div>
          <% if (stats.nextLevelGames > 0) { %>
            <small class="text-muted">
              Noch <%= stats.nextLevelGames %> Spiele bis <%= stats.nextLevelName %>
            </small>
          <% } else { %>
            <small class="text-success">
              <i class="fas fa-crown me-1"></i>Maximales Level erreicht!
            </small>
          <% } %>
        </div>
        
        <!-- Status Badge -->
        <div class="mb-3">
          <% if (stats.isInactive) { %>
            <span class="badge bg-warning text-dark">Inaktiv</span>
            <div class="mt-2">
              <a href="/game/add" class="btn btn-outline-warning btn-sm">
                <i class="fas fa-gamepad me-1"></i>Jetzt Spiel hinzufügen
              </a>
            </div>
          <% } else { %>
            <span class="badge bg-success">Aktiv</span>
          <% } %>
        </div>
      </div>
    </div>
    
    <!-- Shirt Level Erklärung -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-white">
        <h2 class="h6 mb-0">Shirt Levels</h2>
      </div>
      <div class="card-body">
        <div class="small">
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #bebebe; color: #212529; border: 1px solid #dee2e6; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Rookie</span>
            <span class="text-muted">0-29</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge bg-light text-dark me-2" style="min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Beginner</span>
            <span class="text-muted">30-89</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #ffc107; color: #212529; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Intermediate</span>
            <span class="text-muted">90-149</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #fd7e14; color: white; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Experienced</span>
            <span class="text-muted">150-299</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #198754; color: white; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Advanced</span>
            <span class="text-muted">300-499</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #0d6efd; color: white; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Expert</span>
            <span class="text-muted">500-749</span>
          </div>
          <div class="d-flex align-items-center mb-1">
            <span class="badge me-2" style="background-color: #6f42c1; color: white; min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Master</span>
            <span class="text-muted">750-999</span>
          </div>
          <div class="d-flex align-items-center">
            <span class="badge bg-dark me-2" style="min-width: 60px;"><i class="fas fa-tshirt me-1"></i>Legend</span>
            <span class="text-muted">1000+</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-white">
        <h2 class="h5 mb-0">Statistiken</h2>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-4 mb-3 mb-md-0">
            <h3 class="text-primary mb-0"><%= stats.gamesPlayed %></h3>
            <p class="text-muted mb-0">Gespielte Spiele</p>
          </div>
          <div class="col-md-4 mb-3 mb-md-0">
            <h3 class="text-success mb-0"><%= stats.gamesWon %></h3>
            <p class="text-muted mb-0">Gewonnene Spiele</p>
          </div>
          <div class="col-md-4 mb-3 mb-md-0">
            <h3 class="text-info mb-0"><%= stats.winRate %>%</h3>
            <p class="text-muted mb-0">Gewinnrate</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-white">
        <h2 class="h5 mb-0">Letzte Spiele</h2>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Datum</th>
                <th>Mitspieler</th>
                <th>Gegner</th>
                <th>Ergebnis</th>
                <th>ELO Änderung</th>
              </tr>
            </thead>
            <tbody>
              <% if (recentGames && recentGames.length > 0) { %>
                <% recentGames.forEach(game => { %>
                  <tr>
                    <td><%= new Date(game.createdAt).toLocaleDateString('de-DE') %></td>
                    <td>
                      <% 
                        // Finde den Mitspieler
                        let teammate = '';
                        let opponents = [];
                        
                        // Prüfe ob User in Team 1 ist
                        const userInTeam1 = game.team1.some(player => player.player._id.toString() === user._id.toString());
                        
                        if (userInTeam1) {
                          // User ist in Team 1, finde Mitspieler
                          teammate = game.team1.find(player => player.player._id.toString() !== user._id.toString()).player.username;
                          // Gegner sind Team 2
                          opponents = game.team2.map(player => player.player.username);
                        } else {
                          // User ist in Team 2, finde Mitspieler
                          teammate = game.team2.find(player => player.player._id.toString() !== user._id.toString()).player.username;
                          // Gegner sind Team 1
                          opponents = game.team1.map(player => player.player.username);
                        }
                      %>
                      <%= teammate %>
                    </td>
                    <td><%= opponents.join(' & ') %></td>
                    <td>
                      <% 
                        const userWon = (userInTeam1 && game.winner === 'team1') || (!userInTeam1 && game.winner === 'team2');
                      %>
                      <span class="<%= userWon ? 'text-success' : 'text-danger' %>">
                        <%= game.score.team1 %>-<%= game.score.team2 %>
                      </span>
                    </td>
                    <td>
                      <% 
                        // Finde die ELO-Änderung des Benutzers
                        let eloChange = 0;
                        let playerTeam = '';
                        
                        // Überprüfe Team 1
                        game.team1.forEach(player => {
                          if (player.player._id.toString() === user._id.toString()) {
                            eloChange = player.eloChange;
                            playerTeam = 'team1';
                          }
                        });
                        
                        // Überprüfe Team 2
                        game.team2.forEach(player => {
                          if (player.player._id.toString() === user._id.toString()) {
                            eloChange = player.eloChange;
                            playerTeam = 'team2';
                          }
                        });
                      %>
                      
                      <span class="<%= eloChange >= 0 ? 'text-success' : 'text-danger' %>">
                        <%= eloChange >= 0 ? '+' : '' %><%= eloChange %>
                      </span>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center py-3">
                    <p class="text-muted mb-2">Noch keine Spiele gespielt!</p>
                    <a href="/game/add" class="btn btn-primary btn-sm">
                      <i class="fas fa-plus me-1"></i>Erstes Spiel hinzufügen
                    </a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Upload Image Modal -->
<div class="modal fade" id="uploadImageModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" action="/user/profile/upload-image" enctype="multipart/form-data">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">
            <i class="fas fa-camera me-2"></i>Profilbild ändern
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="profileImage" class="form-label">Neues Profilbild</label>
            <input type="file" 
                   class="form-control" 
                   id="profileImage" 
                   name="profileImage" 
                   accept="image/jpeg,image/jpg,image/png,image/webp"
                   required>
            <div class="form-text">
              <small>
                <i class="fas fa-info-circle me-1"></i>
                Erlaubte Formate: JPEG, PNG, WebP. Max. 5MB.<br>
              </small>
            </div>
          </div>
          
          <!-- Image Preview -->
          <div class="mb-3">
            <div id="imagePreview" class="text-center" style="display: none;">
              <img id="previewImg" 
                   src="" 
                   alt="Vorschau" 
                   class="rounded-circle"
                   style="width: 120px; height: 120px; object-fit: cover;">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-upload me-2"></i>Bild hochladen
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Profil bearbeiten Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" action="/user/profile/update" enctype="multipart/form-data">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Profil bearbeiten</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Schliessen"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="username" class="form-label">Benutzername</label>
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
            </div>
            <div class="form-text">Dein Name wird öffentlich in der Rangliste angezeigt.</div>
          </div>
          
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Deine E-Mail-Adresse kann nicht geändert werden. Falls du deine E-Mail-Adresse ändern möchtest, kontaktiere bitte den Administrator.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Änderungen speichern
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
// Image preview functionality
document.getElementById('profileImage').addEventListener('change', function(e) {
  const file = e.target.files[0];
  const preview = document.getElementById('imagePreview');
  const previewImg = document.getElementById('previewImg');
  
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      preview.style.display = 'block';
    };
    reader.readAsDataURL(file);
  } else {
    preview.style.display = 'none';
  }
});
</script>

<%- include('../partials/footer') %>