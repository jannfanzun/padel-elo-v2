<%- include('../partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Anmeldeanfragen</h2>
        <a href="/admin/dashboard" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-2"></i>Zum Dashboard
        </a>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="h5 mb-0">Ausstehende Anfragen</h3>
            <% if (total > 0) { %>
              <span class="badge bg-warning text-dark"><%= total %> ausstehend</span>
            <% } %>
          </div>
        </div>
        <div class="card-body p-0">
          <% if (requests.length === 0) { %>
            <div class="p-4 text-center">
              <p class="text-muted mb-0">Keine ausstehenden Registrierungsanfragen.</p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Benutzername</th>
                    <th>E-Mail</th>
                    <th>Datum</th>
                    <th>Aktionen</th>
                  </tr>
                </thead>
                <tbody>
                  <% requests.forEach(request => { %>
                    <tr>
                      <td><%= request.username %></td>
                      <td><%= request.email %></td>
                      <td><%= moment(request.createdAt).format('MMM D, YYYY HH:mm') %></td>
                      <td>
                        <div class="d-flex">
                          <form method="POST" action="/admin/registration-requests/<%= request._id %>/approve" class="me-2">
                            <button type="submit" class="btn btn-sm btn-success">
                              <i class="fas fa-check me-1"></i>Genehmigen
                            </button>
                          </form>
                          <form method="POST" action="/admin/registration-requests/<%= request._id %>/reject">
                            <button type="submit" class="btn btn-sm btn-danger">
                              <i class="fas fa-times me-1"></i>Ablehnen
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
        <% if (totalPages > 0) { %>
        <div class="card-footer bg-white">
          <nav aria-label="Anfragen Paginierung">
            <ul class="pagination justify-content-center mb-0">
              <% if (hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/registration-requests?page=<%= currentPage - 1 %>">
                    <i class="fas fa-chevron-left"></i> ZurÃ¼ck
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link"><i class="fas fa-chevron-left"></i> ZurÃ¼ck</span>
                </li>
              <% } %>
              
              <% 
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4 && totalPages > 4) {
                  startPage = Math.max(1, endPage - 4);
                }
              %>
              
              <% if (startPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/registration-requests?page=1">1</a>
                </li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
              <% } %>
              
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="/admin/registration-requests?page=<%= i %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              
              <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
                <li class="page-item">
                  <a class="page-link" href="/admin/registration-requests?page=<%= totalPages %>">
                    <%= totalPages %>
                  </a>
                </li>
              <% } %>
              
              <% if (hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/registration-requests?page=<%= currentPage + 1 %>">
                    Weiter <i class="fas fa-chevron-right"></i>
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Weiter <i class="fas fa-chevron-right"></i></span>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  

<%- include('../partials/footer') %>