<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow border-0">
      <!-- Schedule Header -->
      <div class="card-header bg-primary text-white text-center py-4">
        <h1 class="mb-2">
          Padel Spielplan
        </h1>
        <p class="mb-0">Erstelle einen Spielplan und veröffentliche ihn live</p>
        <div class="mt-3">
          <span class="badge bg-light text-primary px-3 py-2" id="stepIndicator">
            Schritt 1: Spieltag generieren
          </span>
        </div>
      </div>

      <div class="card-body p-4">
        <!-- Success/Error Messages -->
        <% if (success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Button zum Löschen vergangener Spielpläne -->
        <div class="mb-4">
          <button class="btn btn-outline-danger" id="deletePastSchedulesBtn">
            <i class="fas fa-broom me-2"></i>Alle vergangenen Spielpläne löschen
          </button>
        </div>

        <!-- Existing Schedule Info (if exists) -->
        <% if (schedule) { %>
          <div class="card mb-4 border">
            <div class="card-header d-flex justify-content-between align-items-center bg-white">
              <h5 class="mb-0">
                <i class="fas fa-calendar-check me-2"></i>Aktueller Spielplan
              </h5>
              <div>
                <button class="btn btn-outline-primary btn-sm me-2" id="editScheduleBtn"
                        data-schedule-id="<%= schedule._id %>"
                        data-players="<%= JSON.stringify(schedule.players.map(p => ({ _id: p._id, username: p.username, eloRating: p.eloRating }))) %>"
                        data-start-time="<%= moment(schedule.startTime).tz('Europe/Zurich').format('YYYY-MM-DDTHH:mm') %>"
                        data-court-names="<%= JSON.stringify(schedule.courtNames || []) %>">
                  <i class="fas fa-users me-1"></i>Spieler ändern
                </button>
                <button class="btn btn-danger btn-sm" id="deleteScheduleBtn" data-schedule-id="<%= schedule._id %>">
                  <i class="fas fa-trash me-1"></i>Löschen
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-2">
                    <strong><i class="fas fa-clock me-2"></i>Startzeit:</strong>
                    <span id="startTimeDisplay"><%= moment(schedule.startTime).tz('Europe/Zurich').format('DD.MM.YYYY HH:mm') %> Uhr</span>
                    <button class="btn btn-sm btn-outline-primary ms-2" id="editStartTimeBtn">
                      <i class="fas fa-edit"></i>
                    </button>
                  </div>
                  <div id="startTimeEditForm" class="d-none mb-2">
                    <div class="input-group">
                      <input type="datetime-local"
                             id="editStartTimeInput"
                             class="form-control"
                             value="<%= moment(schedule.startTime).tz('Europe/Zurich').format('YYYY-MM-DDTHH:mm') %>">
                      <button class="btn btn-success" id="saveStartTimeBtn">
                        <i class="fas fa-check"></i>
                      </button>
                      <button class="btn btn-secondary" id="cancelStartTimeBtn">
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <p class="mb-2">
                    <strong><i class="fas fa-users me-2"></i>Spieler:</strong>
                    <%= schedule.players.length %> Spieler (<%= schedule.players.length / 4 %> Plätze)
                  </p>
                </div>
                <div class="col-md-6">
                  <p class="mb-2">
                    <strong><i class="fas fa-info-circle me-2"></i>Status:</strong>
                    <%
                      const now = new Date();
                      const startTime = new Date(schedule.startTime);
                      const isUpcoming = startTime > now;
                      const gameDay = new Date(startTime);
                      gameDay.setHours(23, 0, 0, 0);
                      const isPast = now > gameDay;

                      if (schedule.isPublished && isUpcoming) {
                    %>
                      <span class="badge bg-primary">Bevorstehend (veröffentlicht)</span>
                    <% } else if (schedule.isPublished && !isPast) { %>
                      <span class="badge bg-success">Live / Aktiv</span>
                    <% } else if (schedule.isPublished && isPast) { %>
                      <span class="badge bg-secondary">Abgeschlossen</span>
                    <% } else if (!schedule.isPublished && isPast) { %>
                      <span class="badge bg-dark">Abgeschlossen (nicht veröffentlicht)</span>
                    <% } else { %>
                      <span class="badge bg-warning text-dark">Entwurf</span>
                    <% } %>
                  </p>
                  <% if (schedule.publishedAt) { %>
                    <p class="mb-2">
                      <strong><i class="fas fa-calendar-check me-2"></i>Veröffentlicht:</strong>
                      <%= moment(schedule.publishedAt).tz('Europe/Zurich').format('DD.MM.YYYY HH:mm') %> Uhr
                    </p>
                  <% } %>
                  <% if (!schedule.isPublished && !isPast) { %>
                    <button class="btn btn-success btn-sm" id="republishScheduleBtn" data-schedule-id="<%= schedule._id %>">
                      <i class="fas fa-paper-plane me-1"></i>Jetzt veröffentlichen
                    </button>
                  <% } else if (schedule.isPublished && isUpcoming) { %>
                    <button class="btn btn-outline-success btn-sm" id="republishScheduleBtn" data-schedule-id="<%= schedule._id %>">
                      <i class="fas fa-sync me-1"></i>Erneut veröffentlichen
                    </button>
                  <% } %>
                  <% if (schedule.isPublished) { %>
                    <button class="btn btn-info btn-sm ms-2" id="notifyPlayersBtn" data-schedule-id="<%= schedule._id %>">
                      <i class="fas fa-envelope me-1"></i>Spieler benachrichtigen
                    </button>
                  <% } %>
                </div>
              </div>

              <!-- Spielplan Matchups anzeigen (aufklappbar) -->
              <% if (scheduleCourts && scheduleCourts.length > 0) { %>
                <hr class="my-3">
                <div class="d-grid">
                  <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#scheduleMatchupsCollapse">
                    <i class="fas fa-list me-2"></i>Spielpaarungen anzeigen
                    <i class="fas fa-chevron-down ms-2"></i>
                  </button>
                </div>
                <div class="collapse mt-3" id="scheduleMatchupsCollapse">
                  <div class="row">
                    <% scheduleCourts.forEach(court => { %>
                      <div class="col-md-6 mb-3">
                        <div class="card court-card">
                          <div class="card-header bg-light">
                            <strong><i class="fas fa-map-marker-alt me-2"></i><%= court.courtName %></strong>
                          </div>
                          <div class="card-body p-2">
                            <div class="d-flex justify-content-between align-items-center">
                              <div class="flex-fill">
                                <div class="mb-1">
                                  <small class="text-muted">Team 1</small><br>
                                  <strong><%= court.team1[0].username %></strong><% if (court.team1[0].isNewPlayer) { %> <span class="text-muted">(N)</span><% } %> <span class="badge bg-primary badge-sm"><%= court.team1[0].elo %></span><br>
                                  <strong><%= court.team1[1].username %></strong><% if (court.team1[1].isNewPlayer) { %> <span class="text-muted">(N)</span><% } %> <span class="badge bg-primary badge-sm"><%= court.team1[1].elo %></span>
                                </div>
                                <small class="text-muted">Ø <%= court.team1Elo %> ELO</small>
                              </div>
                              <div class="px-2">
                                <span class="badge bg-secondary">VS</span>
                              </div>
                              <div class="flex-fill">
                                <div class="mb-1">
                                  <small class="text-muted">Team 2</small><br>
                                  <strong><%= court.team2[0].username %></strong><% if (court.team2[0].isNewPlayer) { %> <span class="text-muted">(N)</span><% } %> <span class="badge bg-primary badge-sm"><%= court.team2[0].elo %></span><br>
                                  <strong><%= court.team2[1].username %></strong><% if (court.team2[1].isNewPlayer) { %> <span class="text-muted">(N)</span><% } %> <span class="badge bg-primary badge-sm"><%= court.team2[1].elo %></span>
                                </div>
                                <small class="text-muted">Ø <%= court.team2Elo %> ELO</small>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>

        <!-- Step 1: Tournament Generation (Spieltag generieren) -->
        <div id="step1">
          <h3 class="mb-4 text-center text-primary">
            Wie viele Spieler nehmen teil?
          </h3>
          <div class="row g-3">
            <% [4, 8, 12, 16, 20, 24].forEach((count, index) => { %>
              <div class="col-md-4 col-6">
                <div class="card player-count-card h-100 text-center border-2"
                     data-count="<%= count %>"
                     style="cursor: pointer;">
                  <div class="card-body p-3">
                    <h4 class="text-primary mb-2"><%= count %> Spieler</h4>
                    <p class="text-muted mb-0"><%= count / 4 %> <%= count / 4 === 1 ? 'Platz' : 'Plätze' %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>

        <!-- Step 2: Player Selection -->
        <div id="step2" class="d-none">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0">
              <i class="fas fa-user-check me-2"></i>Spieler auswählen
            </h3>
            <button class="btn btn-outline-secondary" id="backToStep1">
              <i class="fas fa-arrow-left me-2"></i>Zurück
            </button>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-2">Verfügbare Spieler</h5>
                  <p class="small mb-2">Sortiert nach ELO-Rating (höchste zuerst)</p>

                  <!-- Suchfeld für Spieler -->
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-search"></i>
                    </span>
                    <input type="text"
                           class="form-control"
                           id="playerSearch"
                           placeholder="Spieler nach Namen suchen...">
                    <button class="btn btn-outline-light" type="button" id="clearSearch" style="display: none;">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                </div>
                <div class="card-body p-2" style="max-height: 400px; overflow-y: auto;">
                  <div id="availablePlayers">
                    <% allUsers.forEach(user => { %>
                      <div class="available-player-item player-item border rounded p-2 mb-2 d-flex justify-content-between align-items-center"
                           data-username="<%= user.username.toLowerCase() %>"
                           data-display-name="<%= user.username %>"
                           data-elo="<%= user.eloRating %>"
                           data-user-id="<%= user._id %>">
                        <div>
                          <strong class="player-name"><%= user.username %></strong>
                          <span class="badge bg-primary ms-2"><%= user.eloRating %> ELO</span>
                        </div>
                        <button class="btn btn-sm btn-outline-primary add-player-btn">
                          <i class="fas fa-plus"></i>
                        </button>
                      </div>
                    <% }); %>
                  </div>
                  <div id="noPlayersFound" class="text-center text-muted p-3" style="display: none;">
                    <p class="mb-0">Keine Spieler gefunden</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card">
                <div class="card-header bg-success text-white">
                  <h5 class="mb-0">
                    Ausgewählte Spieler
                    (<span id="selectedCount">0</span>/<span id="maxPlayers">8</span>)
                  </h5>
                </div>
                <div class="card-body p-2" style="min-height: 300px; max-height: 400px; overflow-y: auto;">
                  <div id="selectedPlayers">
                    <p class="text-muted text-center mt-4">
                      Noch keine Spieler ausgewählt
                    </p>
                  </div>
                </div>
                <div class="card-footer text-center">
                  <button class="btn btn-success btn-lg px-4" id="generateTournamentBtn" disabled>
                    <i class="fas fa-magic me-2"></i>Spieltag generieren
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3: Tournament Results (Spielplan anzeigen) -->
        <div id="step3" class="d-none">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0">
              <i class="fas fa-list me-2"></i>Generierter Spielplan
            </h3>
            <button class="btn btn-outline-secondary" id="backToStep2">
              <i class="fas fa-arrow-left me-2"></i>Zurück zur Auswahl
            </button>
          </div>

          <div id="tournamentResults"></div>

          <!-- Zeit auswählen -->
          <div class="card mt-4">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">
                <i class="fas fa-clock me-2"></i>Startzeit und Courts einstellen
              </h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label fw-bold">
                  Wann soll das Spiel beginnen?
                </label>
                <input type="datetime-local" id="scheduleStartTime" class="form-control" required />
                <small class="text-muted d-block mt-2">
                  <i class="fas fa-lightbulb"></i> Tip: Standardmäßig ist es auf +30 Minuten gesetzt
                </small>
              </div>

              <div class="mb-3">
                <label class="form-label fw-bold">
                  <i class="fas fa-location-dot me-2"></i>Court-Namen
                </label>
                <small class="text-muted d-block mb-2">
                  Wähle einen Namen für jeden Platz:
                </small>
                <div id="courtNamesContainer"></div>
              </div>
            </div>
          </div>

          <div class="text-center mt-4">
            <button class="btn btn-outline-primary me-3" id="regenerateBtn">
              <i class="fas fa-redo me-2"></i>Neu generieren
            </button>
            <button class="btn btn-success btn-lg px-5" id="publishScheduleBtn">
              <i class="fas fa-rocket me-2"></i>Spielplan veröffentlichen
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .player-count-card {
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .player-count-card:hover {
    border-color: #0d6efd !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .player-count-card.selected {
    border-color: #0d6efd !important;
    background-color: #e7f1ff !important;
  }

  .player-item {
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .player-item:hover {
    border-color: #0d6efd !important;
    transform: translateY(-1px);
  }

  .player-item.disabled {
    opacity: 0.6;
    cursor: not-allowed !important;
  }

  .player-item.disabled:hover {
    border-color: #dee2e6 !important;
    transform: none;
  }

  .player-item.hidden {
    display: none !important;
  }

  .selected-player-item {
    background-color: #d4edda !important;
    border-color: #198754 !important;
  }

  .court-card {
    border-left: 4px solid #0d6efd;
    margin-bottom: 1rem;
  }

  .team-section {
    background-color: #f8f9fa;
    border-radius: 8px;
    padding: 1rem;
  }

  .vs-badge {
    background-color: #0d6efd;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: bold;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let selectedPlayerCount = 0;
    let selectedPlayers = [];
    let currentStep = 1;
    let allPlayers = [];
    let generatedTournament = null;

    // Delete Schedule Button Handler
    const deleteScheduleBtn = document.getElementById('deleteScheduleBtn');
    if (deleteScheduleBtn) {
        deleteScheduleBtn.addEventListener('click', async function() {
            const scheduleId = this.dataset.scheduleId;

            if (!confirm('Bist du sicher, dass du diesen Spielplan löschen möchtest? Diese Aktion kann nicht rückgängig gemacht werden.')) {
                return;
            }

            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Löschen...';
            this.disabled = true;

            try {
                const response = await fetch(`/admin/padel-schedule/${scheduleId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('Spielplan erfolgreich gelöscht!');
                    window.location.href = '/admin/padel-schedule';
                } else {
                    alert('Fehler beim Löschen: ' + data.message);
                    this.innerHTML = originalText;
                    this.disabled = false;
                }
            } catch (error) {
                console.error('Error deleting schedule:', error);
                alert('Server-Fehler beim Löschen des Spielplans');
                this.innerHTML = originalText;
                this.disabled = false;
            }
        });
    }

    // Republish Schedule Button Handler
    const republishScheduleBtn = document.getElementById('republishScheduleBtn');
    if (republishScheduleBtn) {
        republishScheduleBtn.addEventListener('click', async function() {
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Veröffentliche...';
            this.disabled = true;

            try {
                const response = await fetch('/admin/padel-schedule/publish', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert('Spielplan erfolgreich veröffentlicht!');
                    window.location.href = '/admin/padel-schedule';
                } else {
                    alert('Fehler beim Veröffentlichen: ' + data.message);
                    this.innerHTML = originalText;
                    this.disabled = false;
                }
            } catch (error) {
                console.error('Error publishing schedule:', error);
                alert('Server-Fehler beim Veröffentlichen des Spielplans');
                this.innerHTML = originalText;
                this.disabled = false;
            }
        });
    }

    // Notify Players Button Handler
    const notifyPlayersBtn = document.getElementById('notifyPlayersBtn');
    if (notifyPlayersBtn) {
        notifyPlayersBtn.addEventListener('click', async function() {
            if (!confirm('Möchtest du eine E-Mail an alle Spieler im Spielplan senden?')) {
                return;
            }

            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Sende E-Mails...';
            this.disabled = true;

            try {
                const response = await fetch('/admin/padel-schedule/notify', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert(data.message);
                    this.innerHTML = originalText;
                    this.disabled = false;
                } else {
                    alert('Fehler: ' + data.message);
                    this.innerHTML = originalText;
                    this.disabled = false;
                }
            } catch (error) {
                console.error('Error sending notifications:', error);
                alert('Server-Fehler beim Senden der Benachrichtigungen');
                this.innerHTML = originalText;
                this.disabled = false;
            }
        });
    }

    // Delete Past Schedules Button Handler
    const deletePastSchedulesBtn = document.getElementById('deletePastSchedulesBtn');
    if (deletePastSchedulesBtn) {
        deletePastSchedulesBtn.addEventListener('click', async function() {
            if (!confirm('Bist du sicher, dass du alle vergangenen Spielpläne löschen möchtest? Diese Aktion kann nicht rückgängig gemacht werden.')) {
                return;
            }

            const originalText = this.innerHTML;
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Löschen...';
            this.disabled = true;

            try {
                const response = await fetch('/admin/padel-schedule/past', {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();

                if (data.success) {
                    alert(data.message);
                    window.location.href = '/admin/padel-schedule';
                } else {
                    alert('Fehler beim Löschen: ' + data.message);
                    this.innerHTML = originalText;
                    this.disabled = false;
                }
            } catch (error) {
                console.error('Error deleting past schedules:', error);
                alert('Server-Fehler beim Löschen vergangener Spielpläne');
                this.innerHTML = originalText;
                this.disabled = false;
            }
        });
    }

    // Edit Schedule Button Handler (für Spieler-Bearbeitung)
    const editScheduleBtn = document.getElementById('editScheduleBtn');
    if (editScheduleBtn) {
        editScheduleBtn.addEventListener('click', function() {
            const playersData = JSON.parse(this.dataset.players);
            const startTime = this.dataset.startTime;
            const courtNames = JSON.parse(this.dataset.courtNames);

            // Setze die Spieleranzahl
            selectedPlayerCount = playersData.length;

            // Wähle die passende Karte für Spielerzahl
            document.querySelectorAll('.player-count-card').forEach(card => {
                if (parseInt(card.dataset.count) === selectedPlayerCount) {
                    card.classList.add('selected');
                }
            });

            // Lade die vorhandenen Spieler
            selectedPlayers = playersData.map(p => ({
                username: p.username,
                elo: p.eloRating,
                userId: p._id
            }));

            // Speichere Court-Namen und Startzeit für später
            window.editModeCourtNames = courtNames;
            window.editModeStartTime = startTime;

            // Zeige Step 2
            showStep(2);
            document.getElementById('maxPlayers').textContent = selectedPlayerCount;
            updateSelectedPlayersDisplay();
            updateAvailablePlayersVisibility();
        });
    }

    // Edit Start Time Handler (Inline-Bearbeitung)
    const editStartTimeBtn = document.getElementById('editStartTimeBtn');
    const startTimeDisplay = document.getElementById('startTimeDisplay');
    const startTimeEditForm = document.getElementById('startTimeEditForm');
    const editStartTimeInput = document.getElementById('editStartTimeInput');
    const saveStartTimeBtn = document.getElementById('saveStartTimeBtn');
    const cancelStartTimeBtn = document.getElementById('cancelStartTimeBtn');

    if (editStartTimeBtn) {
        editStartTimeBtn.addEventListener('click', function() {
            startTimeDisplay.classList.add('d-none');
            editStartTimeBtn.classList.add('d-none');
            startTimeEditForm.classList.remove('d-none');
        });

        cancelStartTimeBtn.addEventListener('click', function() {
            startTimeDisplay.classList.remove('d-none');
            editStartTimeBtn.classList.remove('d-none');
            startTimeEditForm.classList.add('d-none');
        });

        saveStartTimeBtn.addEventListener('click', async function() {
            const newStartTime = editStartTimeInput.value;
            if (!newStartTime) {
                alert('Bitte wähle eine Startzeit!');
                return;
            }

            const scheduleId = document.getElementById('deleteScheduleBtn').dataset.scheduleId;

            saveStartTimeBtn.disabled = true;
            saveStartTimeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

            try {
                const response = await fetch(`/admin/padel-schedule/${scheduleId}/start-time`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ startTime: newStartTime })
                });

                const data = await response.json();

                if (data.success) {
                    startTimeDisplay.textContent = data.newStartTime + ' Uhr';
                    startTimeDisplay.classList.remove('d-none');
                    editStartTimeBtn.classList.remove('d-none');
                    startTimeEditForm.classList.add('d-none');
                } else {
                    alert('Fehler: ' + data.message);
                }
            } catch (error) {
                console.error('Error updating start time:', error);
                alert('Server-Fehler beim Aktualisieren der Startzeit');
            } finally {
                saveStartTimeBtn.disabled = false;
                saveStartTimeBtn.innerHTML = '<i class="fas fa-check"></i>';
            }
        });
    }

    // Initialisiere alle Spieler für die Suche
    document.querySelectorAll('.available-player-item').forEach(item => {
        allPlayers.push({
            element: item,
            name: item.dataset.displayName,
            searchName: item.dataset.username,
            elo: parseInt(item.dataset.elo),
            userId: item.dataset.userId
        });
    });

    // Step 1: Player count selection
    document.querySelectorAll('.player-count-card').forEach(card => {
        card.addEventListener('click', function() {
            document.querySelectorAll('.player-count-card').forEach(c =>
                c.classList.remove('selected'));

            this.classList.add('selected');
            selectedPlayerCount = parseInt(this.dataset.count);

            setTimeout(() => {
                showStep(2);
                document.getElementById('maxPlayers').textContent = selectedPlayerCount;
                updateAvailablePlayersVisibility();
            }, 300);
        });
    });

    // Zurück-Buttons
    document.getElementById('backToStep1').addEventListener('click', () => {
        showStep(1);
        resetPlayerSelection();
    });

    document.getElementById('backToStep2').addEventListener('click', () => {
        showStep(2);
    });

    // Spielersuche
    const searchInput = document.getElementById('playerSearch');
    const clearSearchBtn = document.getElementById('clearSearch');

    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase().trim();
        filterPlayers(searchTerm);
        clearSearchBtn.style.display = searchTerm ? 'block' : 'none';
    });

    clearSearchBtn.addEventListener('click', function() {
        searchInput.value = '';
        filterPlayers('');
        this.style.display = 'none';
        searchInput.focus();
    });

    // Spieler filtern
    function filterPlayers(searchTerm) {
        const noResultsDiv = document.getElementById('noPlayersFound');
        let visibleCount = 0;

        allPlayers.forEach(player => {
            const isDisabled = player.element.classList.contains('disabled');
            const matchesSearch = searchTerm === '' || player.searchName.includes(searchTerm);
            const isVisible = !isDisabled && matchesSearch;

            if (isVisible) {
                player.element.classList.remove('hidden');
                visibleCount++;
            } else {
                player.element.classList.add('hidden');
            }
        });

        noResultsDiv.style.display = visibleCount === 0 && searchTerm ? 'block' : 'none';
    }

    // Add/Remove players
    document.addEventListener('click', function(e) {
        if (e.target.closest('.add-player-btn')) {
            e.preventDefault();
            const playerItem = e.target.closest('.available-player-item');
            addPlayer(playerItem);
        }

        if (e.target.closest('.remove-player-btn')) {
            e.preventDefault();
            const playerItem = e.target.closest('.selected-player-item');
            removePlayer(playerItem);
        }
    });

    // Generate tournament
    document.getElementById('generateTournamentBtn').addEventListener('click', generateTournament);
    document.getElementById('regenerateBtn').addEventListener('click', generateTournament);
    document.getElementById('publishScheduleBtn').addEventListener('click', publishSchedule);

    function showStep(step) {
        for (let i = 1; i <= 3; i++) {
            document.getElementById(`step${i}`).classList.add('d-none');
        }

        document.getElementById(`step${step}`).classList.remove('d-none');
        currentStep = step;

        const indicators = [
            'Schritt 1: Spieltag generieren',
            'Schritt 2: Spieler auswählen',
            'Schritt 3: Spielplan & Zeit'
        ];

        document.getElementById('stepIndicator').textContent = indicators[step - 1];
    }

    function addPlayer(playerItem) {
        if (selectedPlayers.length >= selectedPlayerCount) {
            alert(`Maximal ${selectedPlayerCount} Spieler erlaubt!`);
            return;
        }

        const username = playerItem.dataset.displayName;
        const elo = parseInt(playerItem.dataset.elo);
        const userId = playerItem.dataset.userId;

        selectedPlayers.push({ username, elo, userId });

        playerItem.classList.add('disabled');
        playerItem.querySelector('.add-player-btn').disabled = true;

        updateSelectedPlayersDisplay();
        updateAvailablePlayersVisibility();
    }

    function removePlayer(playerItem) {
        const username = playerItem.dataset.displayName;

        selectedPlayers = selectedPlayers.filter(p => p.username !== username);

        const availableItem = document.querySelector(`.available-player-item[data-display-name="${username}"]`);
        if (availableItem) {
            availableItem.classList.remove('disabled');
            availableItem.querySelector('.add-player-btn').disabled = false;
        }

        updateSelectedPlayersDisplay();
        updateAvailablePlayersVisibility();
    }

    function updateSelectedPlayersDisplay() {
        const container = document.getElementById('selectedPlayers');
        const count = document.getElementById('selectedCount');
        const generateBtn = document.getElementById('generateTournamentBtn');

        count.textContent = selectedPlayers.length;

        if (selectedPlayers.length === 0) {
            container.innerHTML = '<p class="text-muted text-center mt-4">Noch keine Spieler ausgewählt</p>';
        } else {
            const sortedPlayers = [...selectedPlayers].sort((a, b) => b.elo - a.elo);

            container.innerHTML = sortedPlayers.map((player, index) => `
                <div class="selected-player-item player-item border rounded p-2 mb-2 d-flex justify-content-between align-items-center"
                     data-display-name="${player.username}"
                     data-elo="${player.elo}">
                    <div>
                        <span class="badge bg-secondary me-2">${index + 1}</span>
                        <strong>${player.username}</strong>
                        <span class="badge bg-success ms-2">${player.elo} ELO</span>
                    </div>
                    <button class="btn btn-sm btn-outline-danger remove-player-btn">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `).join('');
        }

        generateBtn.disabled = selectedPlayers.length !== selectedPlayerCount;
    }

    function updateAvailablePlayersVisibility() {
        const selectedUsernames = selectedPlayers.map(p => p.username);

        document.querySelectorAll('.available-player-item').forEach(item => {
            const username = item.dataset.displayName;
            if (selectedUsernames.includes(username)) {
                item.classList.add('disabled');
                item.querySelector('.add-player-btn').disabled = true;
            } else {
                item.classList.remove('disabled');
                item.querySelector('.add-player-btn').disabled = false;
            }
        });

        const searchTerm = document.getElementById('playerSearch').value.toLowerCase().trim();
        if (searchTerm) {
            filterPlayers(searchTerm);
        }
    }

    function resetPlayerSelection() {
        selectedPlayers = [];
        selectedPlayerCount = 0;

        // Bearbeiten-Modus zurücksetzen
        window.editModeCourtNames = null;
        window.editModeStartTime = null;

        document.querySelectorAll('.player-count-card').forEach(card =>
            card.classList.remove('selected'));
        document.querySelectorAll('.available-player-item').forEach(item => {
            item.classList.remove('disabled');
            item.querySelector('.add-player-btn').disabled = false;
        });

        updateSelectedPlayersDisplay();

        document.getElementById('playerSearch').value = '';
        filterPlayers('');
        document.getElementById('clearSearch').style.display = 'none';
    }

    async function generateTournament() {
        const generateBtn = document.getElementById('generateTournamentBtn');
        const regenerateBtn = document.getElementById('regenerateBtn');

        const originalText = generateBtn.innerHTML;
        generateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Generiere...';
        generateBtn.disabled = true;

        if (regenerateBtn) {
            regenerateBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Generiere...';
            regenerateBtn.disabled = true;
        }

        try {
            const response = await fetch('/tournament/generate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    players: selectedPlayers,
                    playerCount: selectedPlayerCount
                })
            });

            const data = await response.json();

            if (data.success) {
                generatedTournament = data.courts;
                displayTournamentResults(data.courts);

                // Prüfe ob im Bearbeiten-Modus - verwende gespeicherte Startzeit
                if (window.editModeStartTime) {
                    document.getElementById('scheduleStartTime').value = window.editModeStartTime;
                } else {
                    const now = new Date();
                    now.setMinutes(now.getMinutes() + 30);

                    const year = now.getFullYear();
                    const month = String(now.getMonth() + 1).padStart(2, '0');
                    const day = String(now.getDate()).padStart(2, '0');
                    const hours = String(now.getHours()).padStart(2, '0');
                    const minutes = String(now.getMinutes()).padStart(2, '0');

                    document.getElementById('scheduleStartTime').value =
                        `${year}-${month}-${day}T${hours}:${minutes}`;
                }

                showStep(3);

                // Setze Court-Namen wenn im Bearbeiten-Modus
                if (window.editModeCourtNames && window.editModeCourtNames.length > 0) {
                    setTimeout(() => {
                        document.querySelectorAll('.court-name-selector').forEach((selector, index) => {
                            if (window.editModeCourtNames[index]) {
                                selector.value = window.editModeCourtNames[index];
                            }
                        });
                    }, 100);
                }
            } else {
                alert('Fehler beim Generieren: ' + data.message);
            }
        } catch (error) {
            console.error('Error generating tournament:', error);
            alert('Server-Fehler beim Generieren des Turniers');
        } finally {
            generateBtn.innerHTML = originalText;
            generateBtn.disabled = false;

            if (regenerateBtn) {
                regenerateBtn.innerHTML = '<i class="fas fa-redo me-2"></i>Neu generieren';
                regenerateBtn.disabled = false;
            }
        }
    }

    function generateCourtNameSelectors(courtCount) {
        const container = document.getElementById('courtNamesContainer');
        const availableCourtNames = [
            'Puma',
            'fin.cube',
            'Swica',
            'Swiss Life',
            'sweets.ch',
            'ICM Bau',
            'Schoch & Co.',
            'Hustech'
        ];

        let html = '<div class="row g-2">';
        for (let i = 0; i < courtCount; i++) {
            html += `
                <div class="col-md-6 col-lg-3">
                    <div class="mb-2">
                        <label class="form-label small">Platz ${i + 1}</label>
                        <select class="form-select form-select-sm court-name-selector" data-court-index="${i}">
                            <option value="">-- Auswählen --</option>
                            ${availableCourtNames.map(name =>
                                `<option value="${name}">${name}</option>`
                            ).join('')}
                        </select>
                    </div>
                </div>
            `;
        }
        html += '</div>';
        container.innerHTML = html;
    }

    function displayTournamentResults(courts) {
        const container = document.getElementById('tournamentResults');

        if (!courts || courts.length === 0) {
            container.innerHTML = '<p class="text-center text-muted">Keine Spielpaarungen generiert.</p>';
            return;
        }

        // Generiere Court-Name-Selektoren
        generateCourtNameSelectors(courts.length);

        const html = courts.map((court, index) => {
            const courtNameInput = document.querySelector(`[data-court-index="${index}"]`);
            const courtName = courtNameInput ? courtNameInput.value : '';
            const displayName = courtName || `Platz ${index + 1}`;

            const team1PlayersHTML = court.team1.map(player => `
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <span><strong>${player.username}</strong>${player.isNewPlayer ? ' <span class="text-muted">(N)</span>' : ''}</span>
                    <span class="badge bg-primary">${player.elo} ELO</span>
                </div>
            `).join('');

            const team2PlayersHTML = court.team2.map(player => `
                <div class="d-flex justify-content-between align-items-center mb-1">
                    <span><strong>${player.username}</strong>${player.isNewPlayer ? ' <span class="text-muted">(N)</span>' : ''}</span>
                    <span class="badge bg-primary">${player.elo} ELO</span>
                </div>
            `).join('');

            return `
            <div class="card court-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        ${displayName}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="team-section">
                                <h6 class="text-primary mb-2">Team 1</h6>
                                ${team1PlayersHTML}
                                <div class="mt-2 text-center">
                                    <span class="badge bg-primary">Ø ${court.team1Elo} ELO</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2 text-center">
                            <div class="vs-badge">VS</div>
                        </div>

                        <div class="col-md-5">
                            <div class="team-section">
                                <h6 class="text-primary mb-2">Team 2</h6>
                                ${team2PlayersHTML}
                                <div class="mt-2 text-center">
                                    <span class="badge bg-primary">Ø ${court.team2Elo} ELO</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            ELO-Differenz: ${Math.abs(court.team1Elo - court.team2Elo)} Punkte
                        </small>
                    </div>
                </div>
            </div>
            `;
        }).join('');

        container.innerHTML = html;
    }

    function resetTournament() {
        showStep(1);
        resetPlayerSelection();
        document.getElementById('tournamentResults').innerHTML = '';
        generatedTournament = null;
    }

    async function publishSchedule() {
        const startTimeInput = document.getElementById('scheduleStartTime');

        if (!startTimeInput.value) {
            alert('Bitte wähle eine Startzeit!');
            return;
        }

        // Sammle Court-Namen
        const courtNames = [];
        document.querySelectorAll('.court-name-selector').forEach((selector) => {
            const value = selector.value || `Platz ${selector.dataset.courtIndex + 1}`;
            courtNames.push(value);
        });

        const publishBtn = document.getElementById('publishScheduleBtn');
        const originalText = publishBtn.innerHTML;
        publishBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Veröffentliche...';
        publishBtn.disabled = true;

        try {
            const response = await fetch('/admin/padel-schedule/save', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    players: selectedPlayers.map(p => p.userId),
                    startTime: startTimeInput.value,
                    courtNames: courtNames
                })
            });

            const data = await response.json();

            if (data.success) {
                // Publish immediately after saving
                const publishResponse = await fetch('/admin/padel-schedule/publish', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const publishData = await publishResponse.json();

                if (publishData.success) {
                    alert('Spielplan erfolgreich veröffentlicht! Das Dashboard wird aktualisiert.');
                    setTimeout(() => {
                        window.location.href = '/admin/padel-schedule';
                    }, 1500);
                } else {
                    alert('Fehler beim Veröffentlichen: ' + publishData.message);
                }
            } else {
                alert('Fehler beim Speichern: ' + data.message);
            }
        } catch (error) {
            console.error('Error publishing schedule:', error);
            alert('Server-Fehler beim Veröffentlichen');
        } finally {
            publishBtn.innerHTML = originalText;
            publishBtn.disabled = false;
        }
    }
});
</script>

