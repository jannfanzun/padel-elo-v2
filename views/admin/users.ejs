<%- include('../partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Spieler verwalten</h2>
        <a href="/admin/dashboard" class="btn btn-secondary">
          <i class="fas fa-arrow-left me-2"></i>Zum Dashboard
        </a>
      </div>
    </div>
  </div>
  
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <form method="GET" action="/admin/users" class="row g-2">
            <div class="col-md-5">
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" name="search" placeholder="Suche nach Benutzername oder E-Mail" value="<%= search || '' %>">
              </div>
            </div>
            <div class="col-md-3">
              <select name="shirtLevel" class="form-select">
                <option value="all" <%= shirtLevel === 'all' ? 'selected' : '' %>>Alle Trikotlevels</option>
                <% shirtLevels.forEach(level => { %>
                  <option value="<%= level.level %>" <%= shirtLevel === level.level ? 'selected' : '' %>>
                    <%= level.level %> (<%= level.minGames %>+ Spiele)
                  </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-4 d-flex">
              <button type="submit" class="btn btn-primary me-2">Filtern</button>
              <a href="/admin/users" class="btn btn-outline-secondary">Zurücksetzen</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow">
        <div class="card-header bg-white">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="h5 mb-0">Spieler</h3>
            <span class="badge bg-primary"><%= total || 0 %> Spieler insgesamt</span>
          </div>
        </div>
        <div class="card-body p-0">
          <% if (users.length === 0) { %>
            <div class="p-4 text-center">
              <p class="text-muted mb-0">
                <% if (search) { %>
                  Keine Spieler gefunden für "<%= search %>".
                <% } else { %>
                  Keine Spieler gefunden.
                <% } %>
              </p>
            </div>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Benutzername</th>
                    <th>E-Mail</th>
                    <th>ELO</th>
                    <th>Spiele</th>
                    <th>Trikotlevel</th>
                    <th>Trikot verteilt</th>
                    <th>Status</th>
                    <th>Aktionen</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                    <%
                      const sevenDaysAgo = new Date();
                      sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);
                      const isInactive = user.lastActivity < sevenDaysAgo;
                      const shirtDistributed = user.shirtsDistributed && user.shirtsDistributed.find(s => s.level === user.shirtLevel);
                    %>
                    <tr>
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><%= user.eloRating %></td>
                      <td><%= user.gamesPlayed %></td>
                      <td>
                        <span class="badge" style="background-color: <%= user.shirtColor %>; <%= user.shirtColor === 'white' || user.shirtColor === 'yellow' ? 'color: #333;' : 'color: white;' %>">
                          <%= user.shirtLevel %>
                        </span>
                      </td>
                      <td>
                        <button class="btn btn-sm <%= shirtDistributed ? 'btn-success' : 'btn-outline-secondary' %> toggle-shirt-btn"
                          data-user-id="<%= user._id %>"
                          data-level="<%= user.shirtLevel %>"
                          title="<%= shirtDistributed ? 'Ausgeteilt am ' + moment(shirtDistributed.distributedAt).format('DD.MM.YYYY') : 'Als ausgeteilt markieren' %>">
                          <i class="fas <%= shirtDistributed ? 'fa-check' : 'fa-tshirt' %>"></i>
                        </button>
                      </td>
                      <td>
                        <% if (isInactive) { %>
                          <span class="badge bg-warning text-dark">Inaktiv</span>
                        <% } else { %>
                          <span class="badge bg-success">Aktiv</span>
                        <% } %>
                      </td>
                      <td class="d-flex gap-2">
                        <a href="/admin/games?userId=<%= user._id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-history"></i>
                        </a>
                        <button class="btn btn-sm btn-outline-danger"
                          data-bs-toggle="modal"
                          data-bs-target="#deleteUserModal"
                          data-id="<%= user._id %>"
                          data-username="<%= user.username %>">
                          <i class="fas fa-trash"></i>
                        </button>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
        <% if (totalPages > 0) { %>
        <div class="card-footer bg-white">
          <nav aria-label="Spieler Paginierung">
            <ul class="pagination justify-content-center mb-0">
              <% if (hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/users?page=<%= currentPage - 1 %><%= search ? `&search=${search}` : '' %><%= shirtLevel !== 'all' ? `&shirtLevel=${shirtLevel}` : '' %>">
                    <i class="fas fa-chevron-left"></i> Zurück
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link"><i class="fas fa-chevron-left"></i> Zurück</span>
                </li>
              <% } %>
              
              <% 
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4 && totalPages > 4) {
                  startPage = Math.max(1, endPage - 4);
                }
              %>
              
              <% if (startPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/users?page=1<%= search ? `&search=${search}` : '' %><%= shirtLevel !== 'all' ? `&shirtLevel=${shirtLevel}` : '' %>">1</a>
                </li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
              <% } %>
              
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="/admin/users?page=<%= i %><%= search ? `&search=${search}` : '' %><%= shirtLevel !== 'all' ? `&shirtLevel=${shirtLevel}` : '' %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
              
              <% if (endPage < totalPages) { %>
                <% if (endPage < totalPages - 1) { %>
                  <li class="page-item disabled">
                    <span class="page-link">...</span>
                  </li>
                <% } %>
                <li class="page-item">
                  <a class="page-link" href="/admin/users?page=<%= totalPages %><%= search ? `&search=${search}` : '' %><%= shirtLevel !== 'all' ? `&shirtLevel=${shirtLevel}` : '' %>">
                    <%= totalPages %>
                  </a>
                </li>
              <% } %>
              
              <% if (hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/users?page=<%= currentPage + 1 %><%= search ? `&search=${search}` : '' %><%= shirtLevel !== 'all' ? `&shirtLevel=${shirtLevel}` : '' %>">
                    Weiter <i class="fas fa-chevron-right"></i>
                  </a>
                </li>
              <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link">Weiter <i class="fas fa-chevron-right"></i></span>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Benutzer löschen Modal -->
  <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Löschung bestätigen</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schliessen"></button>
        </div>
        <div class="modal-body">
          <p>Sind Sie sicher, dass Sie den Benutzer <strong id="userToDelete"></strong> löschen möchten?</p>
          <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Diese Aktion kann nicht rückgängig gemacht werden. Sie müssen zuerst alle mit diesem Benutzer verknüpften Spiele löschen.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
          <form id="deleteUserForm" method="POST" action="">
            <button type="submit" class="btn btn-danger">Benutzer löschen</button>
          </form>
        </div>
      </div>
    </div>
  </div>  

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Delete user modal
    const deleteModal = document.getElementById('deleteUserModal');
    deleteModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const userId = button.getAttribute('data-id');
      const username = button.getAttribute('data-username');

      document.getElementById('userToDelete').textContent = username;

      const form = document.getElementById('deleteUserForm');
      form.action = `/admin/users/${userId}/delete`;
    });

    // Toggle shirt distributed buttons
    document.querySelectorAll('.toggle-shirt-btn').forEach(button => {
      button.addEventListener('click', async function() {
        const userId = this.getAttribute('data-user-id');
        const level = this.getAttribute('data-level');
        const btn = this;

        try {
          const response = await fetch(`/admin/users/${userId}/toggle-shirt`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ level })
          });

          const data = await response.json();

          if (data.success) {
            // Update button appearance
            if (data.distributed) {
              btn.classList.remove('btn-outline-secondary');
              btn.classList.add('btn-success');
              btn.innerHTML = '<i class="fas fa-check"></i>';
              btn.title = 'Ausgeteilt am ' + new Date().toLocaleDateString('de-CH');
            } else {
              btn.classList.remove('btn-success');
              btn.classList.add('btn-outline-secondary');
              btn.innerHTML = '<i class="fas fa-tshirt"></i>';
              btn.title = 'Als ausgeteilt markieren';
            }
          } else {
            alert('Fehler: ' + data.message);
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Ein Fehler ist aufgetreten');
        }
      });
    });
  });
</script>

<%- include('../partials/footer') %>