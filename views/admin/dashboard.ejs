<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2>Admin Dashboard</h2>
  </div>
</div>

<div class="row mb-4">
  <!-- Stats Cards -->
  <div class="col-md-4 mb-3 mb-md-0">
    <div class="card text-white bg-primary h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title mb-0">Total Players</h5>
            <p class="card-text display-4 fw-bold"><%= stats.userCount %></p>
          </div>
          <i class="fas fa-users fa-3x opacity-50"></i>
        </div>
        <a href="/admin/users" class="text-white text-decoration-none stretched-link">
          <small>Manage Players <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4 mb-3 mb-md-0">
    <div class="card text-white bg-success h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title mb-0">Total Games</h5>
            <p class="card-text display-4 fw-bold"><%= stats.gameCount %></p>
          </div>
          <i class="fas fa-table-tennis fa-3x opacity-50"></i>
        </div>
        <a href="/admin/games" class="text-white text-decoration-none stretched-link">
          <small>Manage Games <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card text-white bg-warning h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title mb-0">Pending Requests</h5>
            <p class="card-text display-4 fw-bold"><%= stats.pendingRequestsCount %></p>
          </div>
          <i class="fas fa-user-plus fa-3x opacity-50"></i>
        </div>
        <a href="/admin/registration-requests" class="text-white text-decoration-none stretched-link">
          <small>Review Requests <i class="fas fa-arrow-right ms-1"></i></small>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Recent Games -->
  <div class="col-lg-6 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Recent Games</h3>
          <a href="/admin/games" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
      </div>
      <div class="card-body p-0">
        <% if (recentGames.length === 0) { %>
          <div class="p-4 text-center">
            <p class="text-muted mb-0">No games recorded yet.</p>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Teams</th>
                  <th>Score</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% recentGames.forEach(game => { %>
                  <tr>
                    <td><%= moment(game.createdAt).format('MMM D, YYYY') %></td>
                    <td class="small">
                      <div><%= game.team1[0].player.username %> & <%= game.team1[1].player.username %></div>
                      <div class="text-muted">vs</div>
                      <div><%= game.team2[0].player.username %> & <%= game.team2[1].player.username %></div>
                    </td>
                    <td>
                      <span class="<%= game.winner === 'team1' ? 'text-success' : 'text-muted' %>"><%= game.score.team1 %></span>
                      -
                      <span class="<%= game.winner === 'team2' ? 'text-success' : 'text-muted' %>"><%= game.score.team2 %></span>
                    </td>
                    <td>
                      <a href="/game/<%= game._id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i>
                      </a>
                      <button class="btn btn-sm btn-outline-danger" 
                        data-bs-toggle="modal" 
                        data-bs-target="#deleteGameModal"
                        data-id="<%= game._id %>">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Recent Users -->
  <div class="col-lg-6 mb-4">
    <div class="card shadow-sm h-100">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Recent Players</h3>
          <a href="/admin/users" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
      </div>
      <div class="card-body p-0">
        <% if (recentUsers.length === 0) { %>
          <div class="p-4 text-center">
            <p class="text-muted mb-0">No players registered yet.</p>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Email</th>
                  <th>ELO</th>
                  <th>Registered</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% recentUsers.forEach(user => { %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.eloRating %></td>
                    <td><%= moment(user.createdAt).format('MMM D, YYYY') %></td>
                    <td>
                      <a href="/admin/games?userId=<%= user._id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-history"></i>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Delete Game Modal -->
<div class="modal fade" id="deleteGameModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this game? This action will revert ELO changes and cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteGameForm" method="POST" action="">
          <button type="submit" class="btn btn-danger">Delete Game</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deleteModal = document.getElementById('deleteGameModal');
    deleteModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const gameId = button.getAttribute('data-id');
      const form = document.getElementById('deleteGameForm');
      form.action = `/admin/games/${gameId}/delete`;
    });
  });
</script>

<%- include('../partials/footer') %>