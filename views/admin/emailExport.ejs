<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h2>E-Mail Export</h2>
      <a href="/admin/dashboard" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Zum Dashboard
      </a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="h5 mb-0">Alle E-Mail-Adressen</h3>
          <span class="badge bg-primary"><%= emailCount %> Spieler</span>
        </div>
      </div>
      <div class="card-body">
        <p class="text-muted mb-3">
          <i class="fas fa-info-circle me-2"></i>
          WÃ¤hle das Export-Format und klicke auf "Kopieren", um die Liste in die Zwischenablage zu kopieren.
        </p>

        <!-- Export Format Selection -->
        <div class="mb-4">
          <label class="form-label fw-bold">Export-Format:</label>
          <div class="btn-group d-flex" role="group">
            <input type="radio" class="btn-check" name="exportFormat" id="emailOnly" value="emailOnly" checked>
            <label class="btn btn-outline-primary" for="emailOnly">
              <i class="fas fa-envelope me-2"></i>Nur E-Mail
            </label>

            <input type="radio" class="btn-check" name="exportFormat" id="nameEmail" value="nameEmail">
            <label class="btn btn-outline-primary" for="nameEmail">
              <i class="fas fa-user me-2"></i>Name + E-Mail
            </label>
          </div>
        </div>

        <!-- Email Only Export -->
        <div id="emailOnlySection">
          <div class="mb-3">
            <label for="emailList" class="form-label fw-bold">E-Mail-Adressen (kommasepariert):</label>
            <textarea class="form-control font-monospace" id="emailList" rows="8" readonly><%= emailList %></textarea>
          </div>
        </div>

        <!-- Name + Email Export -->
        <div id="nameEmailSection" class="d-none">
          <div class="mb-3">
            <label for="nameEmailList" class="form-label fw-bold">Name + E-Mail (CSV-Format):</label>
            <textarea class="form-control font-monospace" id="nameEmailList" rows="8" readonly><%= nameEmailList %></textarea>
          </div>
          <p class="text-muted small mb-3">
            <i class="fas fa-lightbulb me-2"></i>Format: Name, E-Mail (jeder Spieler in einer eigenen Zeile)
          </p>
        </div>

        <div class="d-flex gap-2">
          <button class="btn btn-primary" id="copyButton">
            <i class="fas fa-copy me-2"></i>Kopieren
          </button>
          <span class="text-success d-none" id="copySuccess">
            <i class="fas fa-check-circle me-1"></i>Erfolgreich kopiert!
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const copyButton = document.getElementById('copyButton');
    const copySuccess = document.getElementById('copySuccess');
    const emailOnlyRadio = document.getElementById('emailOnly');
    const nameEmailRadio = document.getElementById('nameEmail');
    const emailOnlySection = document.getElementById('emailOnlySection');
    const nameEmailSection = document.getElementById('nameEmailSection');
    const emailList = document.getElementById('emailList');
    const nameEmailList = document.getElementById('nameEmailList');

    // Toggle sections based on selected format
    function updateSections() {
      if (emailOnlyRadio.checked) {
        emailOnlySection.classList.remove('d-none');
        nameEmailSection.classList.add('d-none');
      } else {
        emailOnlySection.classList.add('d-none');
        nameEmailSection.classList.remove('d-none');
      }
    }

    emailOnlyRadio.addEventListener('change', updateSections);
    nameEmailRadio.addEventListener('change', updateSections);

    // Get current active textarea
    function getActiveTextarea() {
      return emailOnlyRadio.checked ? emailList : nameEmailList;
    }

    copyButton.addEventListener('click', function() {
      const activeTextarea = getActiveTextarea();

      // Select the text
      activeTextarea.select();
      activeTextarea.setSelectionRange(0, 99999); // For mobile devices

      // Copy to clipboard
      navigator.clipboard.writeText(activeTextarea.value).then(function() {
        // Show success message
        copySuccess.classList.remove('d-none');
        copyButton.innerHTML = '<i class="fas fa-check me-2"></i>Kopiert!';
        copyButton.classList.remove('btn-primary');
        copyButton.classList.add('btn-success');

        // Reset button after 2 seconds
        setTimeout(function() {
          copySuccess.classList.add('d-none');
          copyButton.innerHTML = '<i class="fas fa-copy me-2"></i>Kopieren';
          copyButton.classList.remove('btn-success');
          copyButton.classList.add('btn-primary');
        }, 2000);
      }).catch(function(err) {
        console.error('Failed to copy text: ', err);
        alert('Kopieren fehlgeschlagen. Bitte manuell kopieren (Strg+C).');
      });
    });
  });
</script>

<%- include('../partials/footer') %>
