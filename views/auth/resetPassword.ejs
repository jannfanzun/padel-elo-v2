<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Neues Passwort erstellen</h3>
      </div>
      <div class="card-body">
        <% if (typeof success !== 'undefined' && success) { %>
          <div class="alert alert-success mb-4">
            <i class="fas fa-check-circle me-2"></i><%= success %>
            <p class="mt-2 mb-0">Du kannst dich jetzt <a href="/auth/login">anmelden</a>.</p>
          </div>
        <% } else { %>
          <p class="text-muted mb-4">
            Bitte gib dein neues Passwort ein.
          </p>
          
          <form method="POST" action="/auth/reset-password/<%= resetToken %>">
            <div class="mb-3">
              <label for="password" class="form-label">Neues Passwort</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" minlength="6" required>
              </div>
              <div class="form-text">Mindestens 6 Zeichen</div>
            </div>
            
            <div class="mb-4">
              <label for="confirmPassword" class="form-label">Passwort bestätigen</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6" required>
              </div>
            </div>
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-key me-2"></i>Passwort zurücksetzen
              </button>
            </div>
          </form>
        <% } %>
      </div>
      <div class="card-footer bg-white">
        <p class="mb-0 text-center">Zurück zum <a href="/auth/login">Login</a></p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    form.addEventListener('submit', function(e) {
      if (password.value !== confirmPassword.value) {
        e.preventDefault();
        alert('Die Passwörter stimmen nicht überein!');
      }
    });
  });
</script>

<%- include('../partials/footer') %>