<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
      <div class="jumbotron bg-primary text-white rounded p-4">
        <h1 class="display-4">Padel-Rangliste</h1>
        <p class="lead">Willkommen im offiziellen Padel-Ranglistensystem. Verfolge deine ELO-Wertung und tritt gegen andere Spieler an.</p>
        
        <% if (!user) { %>
          <hr class="my-4">
          <p>Jetzt beitreten, Spiele aufzeichnen und in der Rangliste aufsteigen!</p>
          <a class="btn btn-light me-2" href="/auth/register" role="button">Registrieren</a>
          <a class="btn btn-outline-light" href="/auth/login" role="button">Anmelden</a>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="row mb-4">
    <div class="col-md-12">
    <ul class="nav nav-tabs d-flex flex-column flex-md-row">
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'elo' ? 'active' : '' %>" href="?type=elo">
          <i class="fas fa-trophy me-2"></i>ELO Rangliste
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-improvement' ? 'active' : '' %>" href="?type=quarterly-improvement">
          <i class="fas fa-chart-line me-2"></i>Quartal: ELO-Verbesserung
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-games' ? 'active' : '' %>" href="?type=quarterly-games">
          <i class="fas fa-gamepad me-2"></i>Quartal: Spieleanzahl
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link w-100 w-md-auto <%= rankingType === 'alltime-games' ? 'active' : '' %>" href="?type=alltime-games">
          <i class="fas fa-tshirt me-2"></i>All Time padELO Spiele
        </a>
      </li>
    </ul>         
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
      <div class="card-header bg-white">
        <% if (rankingType === 'elo') { %>
          <h2 class="h5 mb-0">Aktuelle Rangliste</h2>
        <% } else if (rankingType === 'quarterly-improvement') { %>
          <h2 class="h5 mb-0">ELO-Verbesserung (<%= quarterName %>)</h2>
        <% } else if (rankingType === 'quarterly-games') { %>
          <h2 class="h5 mb-0">Anzahl Spiele (<%= quarterName %>)</h2>
        <% } else if (rankingType === 'alltime-games') { %>
          <h2 class="h5 mb-0">All Time padELO Spiele - Shirt Ranking</h2>
        <% } %>
      </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Spieler</th>
                <% if (rankingType === 'elo') { %>
                  <th scope="col" class="text-start">ELO Punkte</th>
                <% } else if (rankingType === 'quarterly-improvement') { %>
                  <th scope="col" class="text-start">ELO Verbesserung</th>
                  <th scope="col" class="text-start">Start → Aktuelle ELO</th>
                <% } else if (rankingType === 'quarterly-games') { %>
                  <th scope="col" class="text-start">Anzahl Spiele</th>
                  <th scope="col" class="text-start">ELO Punkte</th>
                <% } else if (rankingType === 'alltime-games') { %>
                  <th scope="col" class="text-start">Gesamt Spiele</th>
                  <th scope="col" class="text-start">Shirt Level</th>
                  <th scope="col" class="text-start">ELO Punkte</th>
                <% } %>
              </tr>
            </thead>
              <tbody>
                <% if (rankings.length === 0) { %>
                  <tr>
                    <td colspan="<%= rankingType === 'elo' ? 3 : (rankingType === 'alltime-games' ? 5 : 4) %>" class="text-center py-3">Noch keine Spieler</td>
                  </tr>
                <% } else { %>
                  <% rankings.forEach(ranking => { %>
                    <tr<%= ranking.isInactive ? ' class="table-warning"' : '' %>>
                      <td><%= ranking.rank %></td>
                      <td>
                        <div class="d-flex align-items-center">
                          <!-- Profile Image -->
                          <div class="me-2">
                            <% if (ranking.user.profileImage) { %>
                              <img src="<%= ranking.user.profileImage %>" 
                                  alt="<%= ranking.user.username %>" 
                                  class="rounded-circle"
                                  style="width: 32px; height: 32px; object-fit: cover;">
                            <% } else { %>
                              <i class="fas fa-user-circle text-primary" style="font-size: 32px;"></i>
                            <% } %>
                          </div>
                          <!-- Username and Badges -->
                          <div>
                            <strong><%= ranking.user.username %></strong>
                            <% if (ranking.isInactive) { %>
                              <span class="badge bg-warning text-dark ms-1 small">Inaktiv</span>
                            <% } %>
                        </div>
                      </td>
                      
                      <% if (rankingType === 'elo') { %>
                        <td class="text-start"><strong><%= ranking.user.eloRating %></strong></td>
                      <% } else if (rankingType === 'quarterly-improvement') { %>
                        <td class="text-start">
                          <span class="<%= ranking.quarterlyEloChange > 0 ? 'text-success' : (ranking.quarterlyEloChange < 0 ? 'text-danger' : 'text-muted') %>">
                            <strong><%= ranking.quarterlyEloChange > 0 ? '+' : '' %><%= ranking.quarterlyEloChange %></strong>
                          </span>
                        </td>
                        <td class="text-start">
                          <%= ranking.initialQuarterElo %> → <%= ranking.user.eloRating %>
                        </td>
                      <% } else if (rankingType === 'quarterly-games') { %>
                        <td class="text-start"><strong><%= ranking.quarterlyGames %></strong></td>
                        <td class="text-start"><%= ranking.user.eloRating %></td>
                      <% } else if (rankingType === 'alltime-games') { %>
                        <td class="text-start"><strong><%= ranking.alltimeGames %></strong></td>
                        <td class="text-start">
                          <span class="badge" style="background-color: <%= 
                            ranking.shirtColor === 'white' ? '#bebebe; color: #212529; border: 1px solid #dee2e6' :
                            ranking.shirtColor === 'yellow' ? '#ffc107; color: #212529' :
                            ranking.shirtColor === 'orange' ? '#fd7e14; color: white' :
                            ranking.shirtColor === 'green' ? '#198754; color: white' :
                            ranking.shirtColor === 'blue' ? '#0d6efd; color: white' :
                            ranking.shirtColor === 'purple' ? '#6f42c1; color: white' :
                            '#212529; color: white'
                          %>">
                            <i class="fas fa-tshirt me-1"></i><%= ranking.shirtLevel %>
                          </span>
                        </td>
                        <td class="text-start"><%= ranking.user.eloRating %></td>
                      <% } %>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
          <div class="card-footer bg-white">
            <% if (rankingType === 'alltime-games') { %>
              <div class="row">
                <div class="col-12">
                  <small class="text-muted d-block mb-2">
                    <span class="badge bg-warning text-dark">Inaktiv</span> Spieler haben in den letzten 7 Tagen nicht gespielt.
                  </small>
                  <small class="text-muted">
                    <strong>Shirt Levels:</strong>
                    <span class="badge ms-1" style="background-color: #bebebe; color: #212529; border: 1px solid #dee2e6">Rookie (0-29)</span>
                    <span class="badge bg-light text-dark ms-1">Beginner (30-89)</span>
                    <span class="badge ms-1" style="background-color: #ffc107; color: #212529">Intermediate (90-149)</span>
                    <span class="badge ms-1" style="background-color: #fd7e14; color: white">Experienced (150-299)</span>
                    <span class="badge ms-1" style="background-color: #198754; color: white">Advanced (300-499)</span>
                    <span class="badge ms-1" style="background-color: #0d6efd; color: white">Expert (500-749)</span>
                    <span class="badge ms-1" style="background-color: #6f42c1; color: white">Master (750-999)</span>
                    <span class="badge bg-dark ms-1">Legend (1000+)</span>
                  </small>
                </div>
              </div>
            <% } else { %>
              <small class="text-muted">
                <span class="badge bg-warning text-dark">Inaktiv</span> Spieler haben in den letzten 7 Tagen nicht gespielt.
              </small>
            <% } %>
          </div>
      </div>
    </div>
  </div> 

<%- include('partials/footer') %>