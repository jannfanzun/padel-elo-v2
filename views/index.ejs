<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
      <div class="jumbotron bg-primary text-white rounded p-4">
        <h1 class="display-4">Padel-Rangliste</h1>
        <p class="lead">Willkommen im offiziellen Padel-Ranglistensystem. Verfolge deine ELO-Wertung und tritt gegen andere Spieler an.</p>
        
        <% if (!user) { %>
          <hr class="my-4">
          <p>Jetzt beitreten, Spiele aufzeichnen und in der Rangliste aufsteigen!</p>
          <a class="btn btn-light me-2" href="/auth/register" role="button">Registrieren</a>
          <a class="btn btn-outline-light" href="/auth/login" role="button">Anmelden</a>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="row mb-4">
    <div class="col-md-12">
      <!-- Ranking Type Tabs -->
      <ul class="nav nav-tabs d-flex flex-column flex-md-row">
        <li class="nav-item">
          <a class="nav-link w-100 w-md-auto <%= rankingType === 'elo' ? 'active' : '' %>" href="?type=elo">
            <i class="fas fa-trophy me-2"></i>ELO Rangliste
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-improvement' ? 'active' : '' %>" href="?type=quarterly-improvement">
            <i class="fas fa-chart-line me-2"></i>Quartal: ELO-Verbesserung
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link w-100 w-md-auto <%= rankingType === 'quarterly-games' ? 'active' : '' %>" href="?type=quarterly-games">
            <i class="fas fa-gamepad me-2"></i>Quartal: Spieleanzahl
          </a>
        </li>
      </ul>           
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <% if (rankingType === 'elo') { %>
            <h2 class="h5 mb-0">Aktuelle Rangliste</h2>
          <% } else if (rankingType === 'quarterly-improvement') { %>
            <h2 class="h5 mb-0">ELO-Verbesserung (<%= quarterName %>)</h2>
          <% } else if (rankingType === 'quarterly-games') { %>
            <h2 class="h5 mb-0">Anzahl Spiele (<%= quarterName %>)</h2>
          <% } %>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Spieler</th>
                  <% if (rankingType === 'elo') { %>
                    <th scope="col" class="text-start">ELO Punkte</th>
                  <% } else if (rankingType === 'quarterly-improvement') { %>
                    <th scope="col" class="text-start">ELO Verbesserung</th>
                    <th scope="col" class="text-start">Start → Aktuelle ELO</th>
                  <% } else if (rankingType === 'quarterly-games') { %>
                    <th scope="col" class="text-start">Anzahl Spiele</th>
                    <th scope="col" class="text-start">ELO Punkte</th>
                  <% } %>
                </tr>
              </thead>
              <tbody>
                <% if (rankings.length === 0) { %>
                  <tr>
                    <td colspan="<%= rankingType === 'elo' ? 3 : 4 %>" class="text-center py-3">Noch keine Spieler</td>
                  </tr>
                <% } else { %>
                  <% rankings.forEach(ranking => { %>
                    <tr<%= ranking.isInactive ? ' class="table-warning"' : '' %>>
                      <td><%= ranking.rank %></td>
                      <td>
                        <%= ranking.user.username %>
                        <% if (ranking.isInactive) { %>
                          <span class="badge bg-warning text-dark ms-1">Inaktiv</span>
                        <% } %>
                      </td>
                      
                      <% if (rankingType === 'elo') { %>
                        <td class="text-start"><strong><%= ranking.user.eloRating %></strong></td>
                      <% } else if (rankingType === 'quarterly-improvement') { %>
                        <td class="text-start">
                          <span class="<%= ranking.quarterlyEloChange > 0 ? 'text-success' : (ranking.quarterlyEloChange < 0 ? 'text-danger' : 'text-muted') %>">
                            <strong><%= ranking.quarterlyEloChange > 0 ? '+' : '' %><%= ranking.quarterlyEloChange %></strong>
                          </span>
                        </td>
                        <td class="text-start">
                          <%= ranking.initialQuarterElo %> → <%= ranking.user.eloRating %>
                        </td>
                      <% } else if (rankingType === 'quarterly-games') { %>
                        <td class="text-start"><strong><%= ranking.quarterlyGames %></strong></td>
                        <td class="text-start"><%= ranking.user.eloRating %></td>
                      <% } %>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer bg-white">
          <small class="text-muted">
            <span class="badge bg-warning text-dark">Inaktiv</span> Spieler haben in den letzten 10 Tagen nicht gespielt.
          </small>
        </div>
      </div>
    </div>
  </div> 

<%- include('partials/footer') %>